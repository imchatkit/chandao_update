{
  "manifest_version": 3,
  "name": "禅道甘特图插件",
  "version": "0.1.0",
  "description": "在禅道执行页面添加甘特图展示",
  "author": "<hwe1233@163.com>",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "禅道甘特图"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "js/dhtmlxgantt.js",
        "js/content.js"
      ],
      "css": [
        "css/dhtmlxgantt.css",
        "css/styles.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/dhtmlxgantt.js",
        "css/dhtmlxgantt.css",
        "css/styles.css",
        "icons/*"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ]
} 